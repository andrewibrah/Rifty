{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "apps/mobile/src/*"
      ],
      "@shared/*": [
        "packages/shared/src/*"
      ],
      "react-native-safe-area-context": [
        "apps/mobile/vendor/react-native-safe-area-context"
      ]
    },
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true
  },
  "include": [
    "apps/mobile/**/*",
    "packages/shared/**/*"
  ],
  "exclude": [
    "supabase/functions",
    "node_modules"
  ]
}
