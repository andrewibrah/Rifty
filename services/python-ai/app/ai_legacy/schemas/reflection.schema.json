{
  "name": "reflection_schema",
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "required": ["intent", "emotion", "one_line_mirror", "next_action"],
    "properties": {
      "intent": {
        "type": "string",
        "enum": ["reflection"]
      },
      "emotion": {
        "type": "string",
        "maxLength": 50
      },
      "one_line_mirror": {
        "type": "string",
        "maxLength": 180
      },
      "next_action": {
        "type": "string",
        "enum": ["anchor", "plan", "log_only"]
      }
    }
  }
}
