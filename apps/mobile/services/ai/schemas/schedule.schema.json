{
  "name": "schedule_schema",
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "required": ["intent", "event_title", "datetime", "duration", "location", "reminders"],
    "properties": {
      "intent": {
        "type": "string",
        "enum": ["schedule"]
      },
      "event_title": {
        "type": "string",
        "maxLength": 100
      },
      "datetime": {
        "type": "string",
        "format": "date-time"
      },
      "duration": {
        "type": "string",
        "maxLength": 20
      },
      "location": {
        "type": "string",
        "maxLength": 100
      },
      "reminders": {
        "type": "array",
        "items": {
          "type": "string",
          "maxLength": 50
        }
      }
    }
  }
}
